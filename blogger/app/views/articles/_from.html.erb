<%= form_for(@article) do |f| %>

    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list %>
    </p>

    <%=f.label :title %>
    <%=f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_area :body%>

    <% if @article.new_record? %>
        <%= f.submit "Create" %>
    <%else%>
        <%= f.submit "Update" %>
    <% end %>

<% end %>